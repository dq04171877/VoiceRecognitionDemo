<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFF0"
    android:orientation="vertical" >

    <Button
        android:id="@+id/fileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonfile"
        android:onClick="onClick3" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/circleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:background="@drawable/buttonstart"
        android:onClick="onClick1"
        android:text="@string/circleButton" />

 <Button
     android:id="@+id/danmu"
     android:layout_width="90dp"
     android:layout_height="90dp"
     android:layout_alignBaseline="@+id/circleButton"
     android:layout_alignBottom="@+id/circleButton"
     android:layout_alignParentRight="true"
     android:background="@drawable/buttondanmu"
     android:onClick="onClick4"
      android:layout_marginRight="6dp"
     android:text="@string/setting" />

</RelativeLayout>

<Button
    android:id="@+id/setting"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginBottom="24dp"
    android:layout_marginLeft="192dp"
    android:background="@drawable/buttonsetting"
    android:onClick="onClick2"
    android:text="@string/setting" />

</LinearLayout>